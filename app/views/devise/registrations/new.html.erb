<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first_name %><br />
  	<%= f.text_field :first_name, :value => "first" %></div>

  <div><%= f.label :last_name %><br />
    <%= f.text_field :last_name, :value => "last" %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :value => "test@example.com" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :value => "12345678ABC"  %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :value => "12345678ABC" %></div>

  <div><%= f.label :account_type %><br />
		<%= f.select :roles, options_for_select([["Choose One", nil], ["Vendor", "vendor"], ["Customer", "customer"]]) %>
	</div>

  <div>
    <div><%= f.label :Street %><br />
      <%= f.text_field :street1, :value => "16 Morgan Ave" %></div>

    <div><%= f.label :City %><br />
      <%= f.text_field :city, :value => "Brooklyn" %></div>

    <div><%= f.label :State %><br />
      <%= f.text_field :state, :value => "NY" %></div>

    <div><%= f.label :Zip %><br />
      <%= f.text_field :zip, :value => "11237" %></div>

  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
